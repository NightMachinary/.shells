#!/bin/dash

w="${1:-${COLUMNS:-120}}"


# wrapping text with ANSI codes https://stackoverflow.com/questions/66986819/how-do-i-wrap-unicode-text-containing-ansi-color-codes-at-word-boundaries
ansifold --boundary=word --width="$w" | rtl_reshaper_rs

